<!DOCTYPE html>
<html lang="en">

<head>
    <title>게시판</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <link href='https://fonts.googleapis.com/css?family=Aldrich' rel='stylesheet'>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            background-image: url("https://blackbearwow.github.io/image/paper.gif");
        }
    </style>
    <script>
        let title;
        let text;
        $(document).ready(() => {
            $("#btn").click(function(){
                sendPost();
	  		});
	  		$("#title, #text").keydown(function(key){
	  			if(key.keyCode==13)
	  			{
                    sendPost();
	  			}
	  		});
        })
        function alertMessage(msg) {
			document.getElementById('alertmessage').style.display = "block";
			document.getElementById('alertmessage').innerHTML = msg;
			alert(msg);
		}
        function sendPost(){
            title=document.getElementById('title').value;
            text=document.getElementById('text').value;
            if(title.length<1) {
                alertMessage('제목을 입력하세요');
                return;
            }
            if(text.length<1) {
                alertMessage('내용을 입력하세요');
                return;
            }
            $.ajax({
  				url: "/sendPost",
  				type: "post",
  				data: {
                    title,
  					text
  				},
			    success: function(result){
			    	if(result=="ok")
			    	{
						console.log("새글쓰기 성공");
			    		location.href=`/bulletinBoard`;
			    	}
			    },
			    error: function(error){
			    	console.log(error);
			    }
		    });
        }
    </script>
</head>

<body>
    <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
        <a class="my-0 mr-md-auto font-weight-normal text-dark" href="/">Home</a>
        <nav class="my-2 my-md-0 mr-md-3">
            <%- navText %>
        </nav>
        <a class="btn btn-outline-primary" href="#">Sign up</a>
    </div>
    <div class="container p-3 my-3 bg-dark text-white" id="posts">
        <form method="post">
            <div class="form-group">
		    	<label for="title">제목:</label>
		        <input type="text" class="form-control" id="title" placeholder="제목" name="title" maxlength="20" required>
		    </div>
            <div class="form-group">
                <label for="text">내용</label>
                <textarea class="form-control" id="text" rows="6" maxlength="490"></textarea>
            </div>
        </form>
        <div>
            <a style="color:orange; display:none" id="alertmessage">정보출력 메시지</a>
        </div>
        <input type="button" class="btn btn-success" value="확인" id="btn">
    </div>
</body>

</html>